@model VoteWithYourWallet.Models.Petition


@{
    ViewBag.Title = "Start a new cuase";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Use this form to create a new cause</h4>
        <hr/>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                <div class="form-group">
                    <!--@Html.LabelFor(model => model.Title, htmlAttributes: new {@class = "control-label"})-->

                    <label for="Title" class="control-label">Give your cause a title</label>

                    @Html.EditorFor(model => model.Title, new {htmlAttributes = new {@class = "form-control widthOverride"}})

                    @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})

                </div>

                <div class="form-group">
                    <!--@Html.LabelFor(model => model.Text, htmlAttributes: new {@class = "control-label"})-->

                    <label for="Text" class="control-label">Tell the word about your cause</label>
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control widthOverride txtbxMinHeight" } })
                    

                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })

                </div>

            

                <div class="form-group">
                    <div>
                        <input type="submit" value="Create" class="btn btn-danger btn-md"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    <br/>
    @Html.ActionLink("Back to List", "Browse")
</div>